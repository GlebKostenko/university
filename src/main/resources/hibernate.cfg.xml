<?xml version = "1.0" encoding = "utf-8"?>
        <!DOCTYPE hibernate-configuration SYSTEM
                "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration xmlns:jdbc="http://www.w3.org/1999/xhtml">
<session-factory>

    <property name = "hibernate.dialect">
        org.hibernate.dialect.PostgreSQL94Dialect
    </property>

    <property name = "hibernate.connection.driver_class">
        org.postgresql.Driver
    </property>

    <property name = "hibernate.connection.url">
        jdbc:postgresql://localhost:5432/university
    </property>

    <property name = "hibernate.connection.username">
        root
    </property>

    <property name = "hibernate.connection.password">
        root
    </property>

    <property name="hbm2ddl.auto">create</property>

        <mapping class="com.foxminded.model.Group" />
    <mapping class="com.foxminded.model.LectureHall" />
    <mapping class="com.foxminded.model.Schedule" />
    <mapping class="com.foxminded.model.Student" />
    <mapping class="com.foxminded.model.Subject" />
    <mapping class="com.foxminded.model.Teacher" />
</session-factory>
</hibernate-configuration>
